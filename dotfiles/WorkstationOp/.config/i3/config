# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	font pango:DejaVu Sans Mono, Awesome 8
	position bottom
        status_command .config/bumblebee-status/bumblebee-status -m amixer spotify cpu sensors nvidiagpu memory datetime -t greyish-powerline -p interval=5 engine.workspacewrap=false engine.workspacewheel=false spotify.format="{artist:.10}|{title:.18}" memory.format="{used}/{total}" disk.format="{used}/{size}" nic.states="^down" nic.format="{intf} {ip} {ssid}" datetime.format="%a %d %b %H:%M"
	colors {
		# 			border  backgr. text
		focused_workspace	$lightgray $lightgray $foctext
		inactive_workspace	$darkergray $darkergray $dimtext
		urgent_workspace 	$yellow $yellow $foctext
	}
}

# Window colors
# 			border|backgr|text|indicator|child_border
client.focused		$lightergray $lightergray $foctext default $lightergray
client.focused_inactive	$darkgray $darkgray $dimtext default $darkgray
client.unfocused	$darkgray $darkgray $dimtext default $darkgray
client.urgent		$yellow $yellow $foctext dafult $yellow

